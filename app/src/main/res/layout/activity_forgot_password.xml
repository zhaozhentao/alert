<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/match_width_match_height"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/action_bar"
        style="@style/action_bar_container">
        <TextView
            android:id="@+id/back"
            style="@style/action_back"
            android:text="@string/back"/>

        <TextView
            style="@style/action_bar_title"
            android:text="@string/forgot"/>
    </RelativeLayout>

    <LinearLayout
        style="@style/match_width_wrap_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号码"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        style="@style/match_width_wrap_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="短信验证码"/>

        <EditText
            android:id="@+id/vCode"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>

        <Button
            android:id="@+id/getMsgCode"
            style="@style/wrap_width_wrap_height"
            android:text="获取短信码"/>
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        style="@style/match_width_wrap_height"
        android:text="重置密码"/>
</LinearLayout>
